---
import { Title } from './shared';

interface Props {
  translations: any;
}

const { translations } = Astro.props;

const amenities = [
  {
    title: translations.amenities.nature,
    icon: 'nature',
    image: '/images/nature-placeholder.jpg'
  },
  {
    title: translations.amenities.skiing,
    icon: 'skiing',
    image: '/images/skiing-placeholder.jpg'
  },
  {
    title: translations.amenities.sports,
    icon: 'sports',
    image: '/images/sports-placeholder.jpg'
  }
];
---

<section id="amenidades" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <Title 
        as="h2" 
        variant="luxury" 
        size="3xl"
        class="text-primary-800 mb-6 font-bold"
      >
        {translations.amenities.title}
      </Title>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Disfruta de instalaciones de primera clase en un entorno natural Ãºnico
      </p>
    </div>

    <!-- Amenities Grid -->
    <div class="grid md:grid-cols-3 gap-8">
      {amenities.map((amenity, index) => (
        <div class="group">
          <!-- Image Container -->
          <div class="relative overflow-hidden rounded-2xl shadow-lg group-hover:shadow-xl transition-all duration-300">
            <div class="aspect-w-16 aspect-h-12 bg-gradient-to-br from-primary-200 to-secondary-200">
              <!-- Placeholder for images -->
              <div class="w-full h-64 bg-gradient-to-br from-primary-300 to-secondary-300 flex items-center justify-center">
                {amenity.icon === 'nature' && (
                  <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                  </svg>
                )}
                {amenity.icon === 'skiing' && (
                  <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21l1.65-3.8a2 2 0 0 1 .7-.9L9 14.25l-2-2 3-3 2 2L15.25 8l.9-.7a2 2 0 0 1 .9-.7L21 3"/>
                  </svg>
                )}
                {amenity.icon === 'sports' && (
                  <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 21l4-4m0 0l4 4m-4-4v-9m0 0l4-4m-4 4L8 4"/>
                  </svg>
                )}
              </div>
            </div>
            
            <!-- Overlay on hover -->
            <div class="absolute inset-0 bg-primary/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>

          <!-- Content -->
          <div class="mt-6 text-center">
            <h3 class="text-xl font-semibold text-primary-800 mb-2">
              {amenity.title}
            </h3>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
