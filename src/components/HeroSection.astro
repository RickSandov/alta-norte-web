---
import { Logo } from "./shared";

interface Props {
  translations: any;
}

const { translations } = Astro.props;
---

<section
  id="inicio"
  class="relative min-h-screen flex items-center justify-center overflow-hidden bg-surface"
  data-animate
>
  <div
    class="absolute inset-0 bg-cover bg-center opacity-25 bg-no-repeat z-10 bg-[url('/images/bg_sierra.jpg')]"
  >
    <!-- <img src="/images/bg_sierra.jpg" alt="" /> -->
  </div>

  <!-- Background with parallax effect -->
  <div class="absolute inset-0 z-0" data-parallax="0.5">
    <!-- Mountain landscape background -->
    <div
      class="absolute opacity-80 inset-0 bg-gradient-to-br from-surface via-primary-800/90 to-secondary-800"
    >
      <!-- Subtle overlay for better text contrast -->
      <div class="absolute inset-0 bg-black/80"></div>

      <!-- Mountain silhouettes with depth -->
      <svg
        viewBox="0 0 1200 600"
        class="absolute bottom-0 w-full h-auto opacity-60"
      >
        <defs>
          <linearGradient id="mountainGrad1" x1="0%" y1="0%" x2="0%" y2="100%">
            <stop offset="0%" style="stop-color:#2a3729;stop-opacity:0.8"
            ></stop>
            <stop offset="100%" style="stop-color:#265143;stop-opacity:1"
            ></stop>
          </linearGradient>
          <linearGradient id="mountainGrad2" x1="0%" y1="0%" x2="0%" y2="100%">
            <stop offset="0%" style="stop-color:#265143;stop-opacity:0.6"
            ></stop>
            <stop offset="100%" style="stop-color:#2a3729;stop-opacity:0.9"
            ></stop>
          </linearGradient>
        </defs>
        <!-- Back mountains -->
        <path
          d="M0,600 L0,350 L150,280 L300,320 L450,200 L600,260 L750,180 L900,240 L1050,160 L1200,200 L1200,600 Z"
          fill="url(#mountainGrad1)"></path>
        <!-- Front mountains -->
        <path
          d="M0,600 L0,400 L120,350 L280,390 L420,300 L580,340 L720,280 L860,320 L1000,260 L1200,300 L1200,600 Z"
          fill="url(#mountainGrad2)"></path>
      </svg>
    </div>
  </div>

  <!-- Main Content -->
  <div class="relative z-20 max-w-7xl mx-auto px-6 lg:px-8 text-center">
    <div class="space-y-8">
      <!-- Tagline -->
      <div class="hero-animate">
        <p class="text-lg md:text-xl text-gray-300 font-medium tracking-wide">
          {translations.hero.tagline}
        </p>
      </div>

      <!-- Main Title -->
      <div class="hero-animate">
        <div class="flex flex-col items-center space-y-4">
          <!-- Alta Norte Isologo -->
          <Logo
            variant="isologo"
            width={120}
            height={150}
            className="opacity-90 drop-shadow-2xl"
          />
          <h1
            class="text-5xl md:text-7xl lg:text-8xl font-bold text-white leading-tight text-center"
          >
            <span class="block mb-2">ALTA</span>
            <span class="block text-primary-300">NORTE</span>
          </h1>
        </div>
      </div>

      <!-- Subtitle -->
      <div class="hero-animate">
        <p
          class="text-xl md:text-2xl lg:text-3xl text-gray-200 max-w-4xl mx-auto leading-relaxed font-light"
        >
          {translations.hero.subtitle}
        </p>
      </div>

      <!-- CTA Button -->
      <div class="hero-animate">
        <button
          class="inline-flex items-center bg-primary hover:bg-primary-700 text-white font-semibold text-lg px-12 py-4 rounded-full transition-all duration-300 hover:scale-105 hover:shadow-2xl shadow-lg group"
        >
          <span>{translations.hero.cta}</span>
          <svg
            class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div
      class="absolute bottom-8 left-1/2 transform -translate-x-1/2 hero-animate"
    >
      <div
        class="flex flex-col items-center space-y-2 text-white/70 animate-bounce"
      >
        <span class="text-sm font-medium tracking-wider"
          >{translations.hero.scroll}</span
        >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </div>
  </div>

  <!-- Floating elements for depth -->
  <div
    class="absolute top-1/4 right-10 w-2 h-2 bg-white/20 rounded-full animate-float hidden lg:block"
  >
  </div>
  <div
    class="absolute bottom-1/3 left-10 w-3 h-3 bg-primary-300/30 rounded-full animate-float delay-1000 hidden lg:block"
  >
  </div>
  <div
    class="absolute top-1/2 right-1/4 w-1 h-1 bg-white/30 rounded-full animate-float delay-2000 hidden lg:block"
  >
  </div>
</section>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .delay-1000 {
    animation-delay: 1s;
  }

  .delay-2000 {
    animation-delay: 2s;
  }

  /* Responsive font scaling */
  @media (max-width: 640px) {
    h1 {
      font-size: 3.5rem;
      line-height: 1;
    }
  }
</style>
