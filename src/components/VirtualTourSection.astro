---
import { Logo } from "./shared";

interface Props {
  translations: any;
}

const { translations } = Astro.props;
---

<section
  id="tour"
  class="py-24 bg-surface relative overflow-hidden"
  data-animate
>
  <!-- Background mountain silhouettes -->
  <div class="absolute inset-0">
    <svg
      viewBox="0 0 1200 600"
      class="absolute bottom-0 w-full h-auto opacity-20"
    >
      <path
        d="M0,600 L0,300 L200,200 L400,280 L600,150 L800,220 L1000,180 L1200,240 L1200,600 Z"
        fill="#2a3729"></path>
    </svg>
  </div>

  <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Left Content -->
      <div class="space-y-8" data-animate-delay="100">
        <div class="space-y-6">
          <h2 class="text-4xl lg:text-6xl font-bold text-white leading-tight">
            {translations.tour.title}<br />
            <span class="text-primary-300">{translations.tour.subtitle}</span>
          </h2>

          <p class="text-xl text-gray-300 leading-relaxed">
            {translations.tour.description}
          </p>
        </div>

        <!-- CTA Button -->
        <div data-animate-delay="200">
          <button
            class="inline-flex items-center bg-primary hover:bg-primary-700 text-white font-semibold px-8 py-4 rounded-full transition-all duration-300 hover:scale-105 shadow-lg group"
          >
            <span>{translations.tour.cta}</span>
            <svg
              class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h8M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Right Content - Tour Preview -->
      <div class="relative" data-animate-delay="200">
        <div class="relative">
          <!-- 360 Tour Container -->
          <div
            class="aspect-square bg-gradient-to-br from-primary-600 via-secondary-600 to-primary-800 rounded-2xl relative overflow-hidden shadow-2xl"
          >
            <div
              class="bg-red-500 h-full w-full bg-cover bg-center bg-no-repeat z-10 bg-[url('/images/tour.jpg')] opacity-50"
            >
            </div>
          </div>
          <!-- Overlay -->
          <div class="absolute inset-0 bg-black/20"></div>

          <!-- 360 Tour Preview Content -->
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center text-white space-y-6">
              <!-- 360 Icon -->
              <div class="relative">
                <div
                  class="w-24 h-24 mx-auto bg-white/10 rounded-full flex items-center justify-center backdrop-blur-sm border border-white/20"
                >
                  <svg
                    class="w-12 h-12"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <!-- Rotating ring animation -->
                <div
                  class="absolute inset-0 border-2 border-white/30 rounded-full animate-spin"
                  style="animation-duration: 8s;"
                >
                </div>
              </div>

              <div class="space-y-2">
                <p class="text-2xl font-bold">
                  {translations.tour.experience}
                </p>
                <p class="text-lg opacity-80">
                  {translations.tour.immersive}
                </p>
              </div>

              <!-- Interactive dots -->
              <div class="flex justify-center space-x-2">
                <div class="w-2 h-2 bg-white rounded-full animate-pulse"></div>
                <div
                  class="w-2 h-2 bg-white/60 rounded-full animate-pulse delay-200"
                >
                </div>
                <div
                  class="w-2 h-2 bg-white/40 rounded-full animate-pulse delay-400"
                >
                </div>
              </div>
            </div>
          </div>

          <!-- Corner badge -->
          <div
            class="absolute top-4 right-4 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-3 py-1"
          >
            <span class="text-white text-sm font-medium"
              >{translations.tour.badge}</span
            >
          </div>
        </div>

        <!-- Alta Norte Logo Overlay -->
        <div class="absolute bottom-6 left-6">
          <div class="bg-white/90 backdrop-blur-sm rounded-lg p-4 shadow-lg">
            <div class="flex items-center space-x-3">
              <!-- Real Logo -->
              <Logo variant="isologo-dark" width={32} height={40} />
              <div>
                <p class="font-bold text-primary text-sm">RESERVA</p>
                <p class="text-2xl font-bold text-surface">ALTA NORTE</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .delay-200 {
    animation-delay: 0.2s;
  }

  .delay-400 {
    animation-delay: 0.4s;
  }
</style>
