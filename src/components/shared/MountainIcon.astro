---
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { class: className = '', size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-6 h-6', 
  lg: 'w-8 h-8',
  xl: 'w-10 h-10'
};
---

