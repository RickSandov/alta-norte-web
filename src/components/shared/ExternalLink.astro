---
export interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { class: className = "w-4 h-4", size } = Astro.props;

const sizeClasses = {
  sm: 'w-3 h-3',
  md: 'w-4 h-4', 
  lg: 'w-5 h-5',
  xl: 'w-6 h-6'
};

const iconClass = size ? sizeClasses[size] : className;
