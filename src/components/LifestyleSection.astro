---
import { Logo } from "./shared";

interface Props {
  translations: any;
}

const { translations } = Astro.props;
---

<section id="lifestyle" class="py-24 bg-surface" data-animate>
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Left Content -->
      <div class="space-y-8" data-animate-delay="100">
        <div class="space-y-6">
          <h2 class="text-4xl lg:text-5xl font-bold text-white leading-tight">
            {translations.lifestyle.title}<br />
            <span class="text-primary-300"
              >{translations.lifestyle.subtitle}</span
            >
          </h2>

          <p class="text-xl text-gray-300 leading-relaxed">
            {translations.lifestyle.description}
          </p>
        </div>

        <!-- Amenity Categories -->
        <div class="flex flex-wrap gap-4 mb-8">
          <span
            class="px-4 py-2 bg-primary/20 text-primary-300 rounded-full text-sm font-medium border border-primary/30"
          >
            {translations.lifestyle.categories.ski_resort}
          </span>
          <span
            class="px-4 py-2 bg-primary/20 text-primary-300 rounded-full text-sm font-medium border border-primary/30"
          >
            {translations.lifestyle.categories.hiking_trails}
          </span>
          <span
            class="px-4 py-2 bg-primary/20 text-primary-300 rounded-full text-sm font-medium border border-primary/30"
          >
            {translations.lifestyle.categories.camping}
          </span>
        </div>

        <!-- Amenity Cards Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <!-- Ski Resort Card -->
          <div class="group cursor-pointer" data-animate-delay="200">
            <div
              class="relative overflow-hidden rounded-xl bg-cover bg-center bg-no-repeat z-10 bg-[url('/images/ski.jpg')] h-24 mb-2 transition-transform duration-300 group-hover:scale-105"
            >
              <div class="absolute inset-0 bg-black/20"></div>
              <div class="absolute inset-0 flex items-center justify-center">
                <svg
                  class="w-8 h-8 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 3l14 9-14 9V3z"></path>
                </svg>
              </div>
            </div>
            <p class="text-white text-sm font-medium text-center">
              {translations.lifestyle.amenities.ski_resort}
            </p>
          </div>

          <!-- Hiking Card -->
          <div class="group cursor-pointer" data-animate-delay="300">
            <div
              class="relative overflow-hidden rounded-xl bg-cover bg-center bg-no-repeat z-10 bg-[url('/images/hike.jpg')] h-24 mb-2 transition-transform duration-300 group-hover:scale-105"
            >
              <div class="absolute inset-0 bg-black/20"></div>
              <div class="absolute inset-0 flex items-center justify-center">
                <svg
                  class="w-8 h-8 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
            </div>
            <p class="text-white text-sm font-medium text-center">
              {translations.lifestyle.amenities.hiking}
            </p>
          </div>

          <!-- Camping Card -->
          <div class="group cursor-pointer" data-animate-delay="400">
            <div
              class="relative overflow-hidden rounded-xl bg-cover bg-center bg-no-repeat z-10 bg-[url('/images/camping.webp')] h-24 mb-2 transition-transform duration-300 group-hover:scale-105"
            >
              <div class="absolute inset-0 bg-black/20"></div>
              <div class="absolute inset-0 flex items-center justify-center">
                <svg
                  class="w-8 h-8 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 7l3-3 9.5 9.5a2.5 2.5 0 01-3.5 3.5L2.5 7z"></path>
                </svg>
              </div>
            </div>
            <p class="text-white text-sm font-medium text-center">
              {translations.lifestyle.amenities.camping}
            </p>
          </div>

          <!-- And More Card -->
          <div class="group cursor-pointer" data-animate-delay="500">
            <div
              class="relative overflow-hidden rounded-xl bg-gradient-to-br from-primary to-secondary h-24 mb-2 transition-transform duration-300 group-hover:scale-105"
            >
              <div class="absolute inset-0 bg-black/20"></div>
              <div class="absolute inset-0 flex items-center justify-center">
                <svg
                  class="w-8 h-8 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
              </div>
            </div>
            <p class="text-white text-sm font-medium text-center">
              {translations.lifestyle.amenities.and_more}
            </p>
          </div>
        </div>
      </div>

      <!-- Right Content - Hero Image -->
      <div class="relative" data-animate-delay="200">
        <div class="relative overflow-hidden rounded-2xl">
          <!-- Placeholder for lifestyle image -->
          <div
            class="aspect-[4/5] bg-gradient-to-br from-primary-600 via-secondary-600 to-primary-800 relative"
          >
            <!-- Overlay -->
            <div class="absolute inset-0 bg-black/20"></div>

            <!-- Sample lifestyle content -->
            <div class="absolute inset-0">
              <img
                class="object-cover w-full h-full"
                src="/images/padel.png"
                alt=""
              />
              <!-- <div class="text-center text-white space-y-4">
                <svg class="w-16 h-16 mx-auto opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3l14 9-14 9V3z"/>
                </svg>
                <p class="text-lg font-medium">Mountain Lifestyle</p>
                <p class="text-sm opacity-80">Experience the extraordinary</p>
              </div> -->
            </div>
          </div>

          <!-- Floating badge -->
          <div
            class="absolute top-6 right-6 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-4 py-2 flex items-center space-x-2"
          >
            <Logo
              variant="isologo"
              width={16}
              height={20}
              className="filter brightness-0 invert opacity-80"
            />
            <span class="text-white text-sm font-medium"
              >{translations.lifestyle.badge}</span
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
